---
import Layout from "../layouts/Layout.astro";

const posts = [
  {
    title:
      "Expectation in the Generalized Coupon Collector Without Replacement Problem",
    href: "/generalizedCouponCollector",
    date: new Date("2024-10-22"),
  },
].sort((a, b) => b.date.getTime() - a.date.getTime());

function formatDate(date: Date): string {
  return date.toLocaleDateString("en-US", { month: "short", year: "numeric" });
}

const stack = [
  "Python",
  "SQL",
  "AWS",
  "GCP",
  "Linux",
  "JavaScript",
];

const tools = [
  "Claude Code",
  "Git",
  "n8n",
  "Jupyter",
  "Umami",
  "Raspberry Pi",
];

const projects = [
  {
    name: "High Learner",
    href: "https://highlearner.com",
    description:
      "Built after running a tutoring business and realizing the operational side didn't scale. A full-stack platform handling outreach, intake, and payments. Designed, built, and deployed solo.",
    tech: ["FastAPI", "PostgreSQL", "React", "AWS", "Vercel", "Railway", "Stripe", "Umami"],
  },
];
---

<Layout>
  <!-- ── Site Header ─────────────────────────────────── -->
  <header class="site-header">
    <div class="header-inner">
      <a href="/" class="header-home">ishaanchawla.com</a>
      <nav class="header-nav" aria-label="Main navigation">
        <a
          href="https://github.com/ishaansworld"
          aria-label="GitHub"
          class="nav-icon"
          target="_blank"
          rel="noopener noreferrer"
        >
          <svg
            viewBox="0 0 24 24"
            fill="currentColor"
            width="17"
            height="17"
            aria-hidden="true"
          >
            <path
              d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.942.359.31.678.921.678 1.856 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
            ></path>
          </svg>
        </a>
        <a
          href="https://www.linkedin.com/in/ishaan-chawla"
          aria-label="LinkedIn"
          class="nav-icon"
          target="_blank"
          rel="noopener noreferrer"
        >
          <svg
            viewBox="0 0 24 24"
            fill="currentColor"
            width="17"
            height="17"
            aria-hidden="true"
          >
            <path
              d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
            ></path>
          </svg>
        </a>
        <button
          id="theme-toggle"
          aria-label="Toggle color theme"
          class="theme-toggle"
        >
          <span class="toggle-text">dark</span>
        </button>
      </nav>
    </div>
  </header>

  <!-- ── Main Content ─────────────────────────────────── -->
  <main>
    <!-- Hero -->
    <section class="hero">
      <h1>Ishaan<br />Chawla.</h1>
    </section>

    <div class="divider"></div>

    <!-- About -->
    <section class="section" id="about">
      <h2 class="section-label">About</h2>
      <div class="section-body">
        <p>Currently an Associate Technical Account Manager at <a
            href="https://wiz.io"
            target="_blank"
            rel="noopener noreferrer">Wiz</a>, where I work with growth and enterprise security teams across a range of industries. Previously at an early-stage AI chip startup, where I built benchmarking tools and helped take a novel compute architecture from concept to VC pitch.</p>
        <p>I write here about math, technology, and things worth thinking about.</p>
        <p class="about-edu">USC Applied Mathematics &mdash; Magna Cum Laude</p>
      </div>
    </section>

    <div class="divider"></div>

    <!-- Stack -->
    <section class="section" id="stack">
      <h2 class="section-label">Tech</h2>
      <div class="section-body">
        <p class="stack-group-label">stack</p>
        <div class="stack-list">
          {
            stack.map((item, i) => (
              <span class="stack-item">
                {item}
                {i < stack.length - 1 && (
                  <span class="stack-sep" aria-hidden="true">
                    ·
                  </span>
                )}
              </span>
            ))
          }
        </div>
        <p class="stack-group-label tools-list">tools</p>
        <div class="stack-list">
          {
            tools.map((item, i) => (
              <span class="stack-item">
                {item}
                {i < tools.length - 1 && (
                  <span class="stack-sep" aria-hidden="true">
                    ·
                  </span>
                )}
              </span>
            ))
          }
        </div>
      </div>
    </section>

    <div class="divider"></div>

    <!-- Projects -->
    <section class="section" id="projects">
      <h2 class="section-label">Projects</h2>
      <div class="section-body">
        {
          projects.map((project) => (
            <div class="project-item">
              {project.href ? (
                <a
                  href={project.href}
                  class="project-name"
                  target="_blank"
                  rel="noopener noreferrer"
                >{project.name}</a>
              ) : (
                <p class="project-name">{project.name}</p>
              )}
              <p class="project-desc">{project.description}</p>
              <p class="project-tech">
                {project.tech.join(" · ")}
              </p>
              {project.note && (
                <p class="project-note">{project.note}</p>
              )}
            </div>
          ))
        }
      </div>
    </section>

    <div class="divider"></div>

    <!-- Writing -->
    <section class="section" id="writing">
      <h2 class="section-label">Writing</h2>
      <div class="section-body">
        <ol class="post-list">
          {
            posts.map((post) => (
              <li class="post-item">
                <a href={post.href} class="post-link">
                  <span class="post-meta">
                    <span class="post-date">{formatDate(post.date)}</span>
                    <span class="post-title">{post.title}</span>
                  </span>
                  <span class="post-arrow" aria-hidden="true">
                    →
                  </span>
                </a>
              </li>
            ))
          }
        </ol>
      </div>
    </section>
  </main>

  <!-- ── Footer ──────────────────────────────────────── -->
  <footer class="site-footer">
    <p>© 2026 Ishaan Chawla</p>
  </footer>
</Layout>

<style>
  /* ─── Header ──────────────────────────────────────── */
  .site-header {
    position: sticky;
    top: 0;
    z-index: 100;
    background: var(--c-bg);
    border-bottom: 1px solid var(--c-border);
    transition:
      background-color var(--t) var(--ease),
      border-color var(--t) var(--ease);
  }

  .header-inner {
    max-width: 760px;
    margin: 0 auto;
    padding: 0 clamp(1.25rem, 5vw, 2rem);
    height: 52px;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .header-home {
    font-family: var(--f-sans);
    font-size: 0.8125rem;
    font-weight: 500;
    letter-spacing: 0.02em;
    color: var(--c-text);
    border: none;
    transition: color var(--t) var(--ease);
  }

  .header-home:hover {
    color: var(--c-accent);
  }

  .header-nav {
    display: flex;
    align-items: center;
    gap: 1.5rem;
  }

  .nav-icon {
    color: var(--c-muted);
    border: none;
    display: flex;
    align-items: center;
    transition: color var(--t) var(--ease);
  }

  .nav-icon:hover {
    color: var(--c-accent);
  }

  .theme-toggle {
    background: none;
    border: none;
    cursor: pointer;
    color: var(--c-muted);
    font-family: var(--f-sans);
    font-size: 0.6875rem;
    letter-spacing: 0.1em;
    text-transform: lowercase;
    padding: 0;
    line-height: 1;
    transition: color var(--t) var(--ease);
  }

  .theme-toggle:hover {
    color: var(--c-accent);
  }

  /* ─── Main Layout ──────────────────────────────────── */
  main {
    max-width: 760px;
    margin: 0 auto;
    padding: 0 clamp(1.25rem, 5vw, 2rem);
    animation: fadeUp 0.55s var(--ease) both;
  }

  @keyframes fadeUp {
    from {
      opacity: 0;
      transform: translateY(14px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* ─── Hero ─────────────────────────────────────────── */
  .hero {
    padding: 5.5rem 0 4.5rem;
  }

  .hero h1 {
    font-family: var(--f-serif);
    font-style: italic;
    font-weight: 400;
    font-size: clamp(3.75rem, 10vw, 6.5rem);
    line-height: 1.0;
    letter-spacing: -0.025em;
    color: var(--c-text);
  }

  /* ─── Divider ───────────────────────────────────────── */
  .divider {
    border-top: 1px solid var(--c-border);
    transition: border-color var(--t) var(--ease);
  }

  /* ─── Sections ──────────────────────────────────────── */
  .section {
    display: grid;
    grid-template-columns: 7rem 1fr;
    align-items: first baseline;
    gap: 2rem;
    padding: 3.5rem 0;
  }

  .section-label {
    font-family: var(--f-sans);
    font-size: 0.6875rem;
    font-weight: 500;
    letter-spacing: 0.12em;
    text-transform: uppercase;
    color: var(--c-muted);
    line-height: 1;
  }

  .section-body {
    max-width: 520px;
  }

  .section-body p {
    font-family: var(--f-body);
    font-weight: 400;
    font-size: 1.3rem;
    line-height: 1.8;
    color: var(--c-text);
  }

  .section-body p + p {
    margin-top: 1rem;
  }

  .about-edu {
    font-family: var(--f-sans);
    font-size: 1rem !important;
    font-weight: 400;
    letter-spacing: 0.05em;
    color: var(--c-muted) !important;
    margin-top: 1.5rem !important;
    line-height: 1.5 !important;
  }

  .section-body a {
    border-bottom: 1px solid var(--c-muted);
    transition:
      color var(--t) var(--ease),
      border-color var(--t) var(--ease);
  }

  .section-body a:hover {
    color: var(--c-accent);
    border-bottom-color: var(--c-accent);
  }

  /* ─── Stack ─────────────────────────────────────────── */
  .stack-list {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 0.125rem;
    padding-top: 0.1rem;
  }

  .stack-group-label {
    font-family: var(--f-sans) !important;
    font-size: 0.625rem !important;
    font-weight: 500 !important;
    letter-spacing: 0.12em !important;
    text-transform: uppercase !important;
    color: var(--c-muted) !important;
    line-height: 1 !important;
    margin-bottom: 0.5rem !important;
  }

  .tools-list {
    margin-top: 1.25rem !important;
  }

  .stack-item {
    font-family: var(--f-body);
    font-weight: 300;
    font-size: 1.2rem;
    color: var(--c-text);
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
  }

  .stack-sep {
    color: var(--c-muted);
    margin: 0 0.25rem;
  }

  /* ─── Projects ──────────────────────────────────────── */
  .project-item {
    padding: 0;
  }

  .project-item + .project-item {
    margin-top: 2.5rem;
    padding-top: 2.5rem;
    border-top: 1px solid var(--c-border);
  }

  .project-name {
    font-family: var(--f-body);
    font-weight: 600;
    font-size: 1.5rem;
    color: var(--c-text);
    border: none;
    display: block;
    transition: color var(--t) var(--ease);
    margin-bottom: 0.5rem !important;
  }

  .project-desc {
    font-size: 0.9375rem;
    line-height: 1.65;
    color: var(--c-text);
    margin-bottom: 0.75rem !important;
  }

  .project-tech {
    font-family: var(--f-body);
    font-weight: 300;
    font-size: 1rem !important;
    color: var(--c-muted);
    margin-bottom: 0.5rem !important;
  }

  a.project-name {
    border-bottom: 1px solid var(--c-muted);
    transition:
      color var(--t) var(--ease),
      border-color var(--t) var(--ease);
  }

  a.project-name:hover {
    color: var(--c-accent);
    border-bottom-color: var(--c-accent);
  }

  .project-note {
    font-family: var(--f-body);
    font-weight: 300;
    font-size: 1rem !important;
    color: var(--c-accent);
    margin-bottom: 0 !important;
  }

  /* ─── Post List ─────────────────────────────────────── */
  .post-list {
    list-style: none;
  }

  .post-link {
    display: flex;
    align-items: baseline;
    justify-content: space-between;
    gap: 1.25rem;
    padding: 1.125rem 0;
    border-bottom: 1px solid var(--c-border);
    transition: border-color var(--t) var(--ease);
  }

  .post-list li:first-child .post-link {
    padding-top: 0;
  }

  .post-meta {
    display: flex;
    align-items: baseline;
    gap: 1.25rem;
    min-width: 0;
  }

  .post-date {
    font-family: var(--f-sans);
    font-size: 0.6875rem;
    font-weight: 500;
    letter-spacing: 0.06em;
    color: var(--c-muted);
    flex-shrink: 0;
    white-space: nowrap;
    transition: color var(--t) var(--ease);
  }

  .post-title {
    font-family: var(--f-body);
    font-size: 1rem;
    font-weight: 500;
    color: var(--c-text);
    line-height: 1.45;
    transition: color var(--t) var(--ease);
  }

  .post-arrow {
    color: var(--c-muted);
    flex-shrink: 0;
    font-size: 0.875rem;
    transition:
      color var(--t) var(--ease),
      transform var(--t) var(--ease);
  }

  .post-link:hover {
    border-bottom-color: var(--c-accent);
  }

  .post-link:hover .post-title,
  .post-link:hover .post-date {
    color: var(--c-accent);
  }

  .post-link:hover .post-arrow {
    color: var(--c-accent);
    transform: translateX(4px);
  }

  /* ─── Footer ────────────────────────────────────────── */
  .site-footer {
    max-width: 760px;
    margin: 0 auto;
    padding: 2rem clamp(1.25rem, 5vw, 2rem) 3.5rem;
    border-top: 1px solid var(--c-border);
    transition: border-color var(--t) var(--ease);
  }

  .site-footer p {
    font-family: var(--f-sans);
    font-size: 0.6875rem;
    letter-spacing: 0.06em;
    color: var(--c-muted);
  }

  /* ─── Responsive ─────────────────────────────────────── */
  @media (max-width: 580px) {
    .hero {
      padding: 3.5rem 0 3rem;
    }

    .section {
      grid-template-columns: 1fr;
      gap: 0.875rem;
      padding: 2.75rem 0;
    }

    .section-label {
      padding-top: 0;
    }

    .section-body {
      max-width: 100%;
    }

    .post-meta {
      gap: 0.875rem;
    }
  }
</style>

<script>
  const toggle = document.getElementById("theme-toggle");
  const html = document.documentElement;
  const text = toggle?.querySelector<HTMLElement>(".toggle-text");

  function syncToggle(theme: string) {
    if (text) text.textContent = theme === "light" ? "dark" : "light";
  }

  syncToggle(html.getAttribute("data-theme") ?? "light");

  toggle?.addEventListener("click", () => {
    const current = html.getAttribute("data-theme");
    const next = current === "light" ? "dark" : "light";
    html.setAttribute("data-theme", next);
    localStorage.setItem("theme", next);
    syncToggle(next);
  });
</script>
