---
import Layout from "./Layout.astro";

interface Props {
  title?: string;
  description?: string;
  articleTitle: string;
  date: string;
  hasMath?: boolean;
}

const {
  title,
  description,
  articleTitle,
  date,
  hasMath = false,
} = Astro.props;
---

<Layout
  title={title ?? `${articleTitle} — Ishaan Chawla`}
  description={description ?? articleTitle}
>
  {hasMath && (
    <Fragment slot="head">
      <!-- MathJax 3: config must appear before the script loads -->
      <script is:inline>
        window.MathJax = {
          tex: {
            inlineMath: [["\\(", "\\)"]],
            displayMath: [["\\[", "\\]"]],
          },
          chtml: { mtextInheritFont: true, scale: 0.85 },
        };
      </script>
      <script
        is:inline
        id="MathJax-script"
        async
        src="https://cdn.jsdelivr.net/npm/mathjax@3/es5/tex-chtml.js"
      ></script>
    </Fragment>
  )}

  <!-- ── Site Header ─────────────────────────────────── -->
  <header class="site-header">
    <div class="header-inner">
      <a href="/" class="header-home">ishaanchawla.com</a>
      <nav class="header-nav" aria-label="Main navigation">
        <a
          href="https://github.com/ishaansworld"
          aria-label="GitHub"
          class="nav-icon"
          target="_blank"
          rel="noopener noreferrer"
        >
          <svg viewBox="0 0 24 24" fill="currentColor" width="17" height="17" aria-hidden="true">
            <path d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.942.359.31.678.921.678 1.856 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" />
          </svg>
        </a>
        <a
          href="https://www.linkedin.com/in/ishaan-chawla"
          aria-label="LinkedIn"
          class="nav-icon"
          target="_blank"
          rel="noopener noreferrer"
        >
          <svg viewBox="0 0 24 24" fill="currentColor" width="17" height="17" aria-hidden="true">
            <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z" />
          </svg>
        </a>
        <button id="theme-toggle" aria-label="Toggle color theme" class="theme-toggle">
          <span class="toggle-text">dark</span>
        </button>
      </nav>
    </div>
  </header>

  <!-- ── Article ──────────────────────────────────────── -->
  <div class="article-wrapper">
    <div class="article-header">
      <a href="/" class="back-link">← Writing</a>
      <h1 class="article-title">{articleTitle}</h1>
      <p class="article-date">{date}</p>
    </div>

    <div class="article-body">
      <slot />
    </div>
  </div>

  <!-- ── Footer ──────────────────────────────────────── -->
  <footer class="site-footer">
    <p>© 2026 Ishaan Chawla</p>
  </footer>
</Layout>

<style>
  /* ─── Header ──────────────────────────────────────── */
  .site-header {
    position: sticky;
    top: 0;
    z-index: 100;
    background: var(--c-bg);
    border-bottom: 1px solid var(--c-border);
    transition:
      background-color var(--t) var(--ease),
      border-color var(--t) var(--ease);
  }

  .header-inner {
    max-width: 760px;
    margin: 0 auto;
    padding: 0 clamp(1.25rem, 5vw, 2rem);
    height: 52px;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .header-home {
    font-family: var(--f-sans);
    font-size: 0.8125rem;
    font-weight: 500;
    letter-spacing: 0.02em;
    color: var(--c-text);
    border: none;
    transition: color var(--t) var(--ease);
  }

  .header-home:hover {
    color: var(--c-accent);
  }

  .header-nav {
    display: flex;
    align-items: center;
    gap: 1.5rem;
  }

  .nav-icon {
    color: var(--c-muted);
    border: none;
    display: flex;
    align-items: center;
    transition: color var(--t) var(--ease);
  }

  .nav-icon:hover {
    color: var(--c-accent);
  }

  .theme-toggle {
    background: none;
    border: none;
    cursor: pointer;
    color: var(--c-muted);
    font-family: var(--f-sans);
    font-size: 0.6875rem;
    letter-spacing: 0.1em;
    text-transform: lowercase;
    padding: 0;
    line-height: 1;
    transition: color var(--t) var(--ease);
  }

  .theme-toggle:hover {
    color: var(--c-accent);
  }

  /* ─── Article wrapper ─────────────────────────────── */
  .article-wrapper {
    max-width: 760px;
    margin: 0 auto;
    padding: 0 clamp(1.25rem, 5vw, 2rem);
    animation: fadeUp 0.55s var(--ease) both;
  }

  @keyframes fadeUp {
    from {
      opacity: 0;
      transform: translateY(14px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .article-header {
    padding: 4rem 0 2.5rem;
    border-bottom: 1px solid var(--c-border);
    margin-bottom: 2.75rem;
    transition: border-color var(--t) var(--ease);
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    font-family: var(--f-sans);
    font-size: 0.6875rem;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--c-muted);
    margin-bottom: 1.75rem;
    transition: color var(--t) var(--ease);
  }

  .back-link:hover {
    color: var(--c-accent);
  }

  .article-title {
    font-family: var(--f-serif);
    font-style: italic;
    font-weight: 400;
    font-size: clamp(1.75rem, 4vw, 2.75rem);
    line-height: 1.2;
    color: var(--c-text);
    margin-bottom: 1rem;
    letter-spacing: -0.01em;
  }

  .article-date {
    font-family: var(--f-sans);
    font-size: 0.6875rem;
    letter-spacing: 0.08em;
    color: var(--c-muted);
  }

  /* ─── Article body ────────────────────────────────── */
  .article-body {
    font-family: var(--f-body);
    font-weight: 400;
    font-size: 1.3rem;
    line-height: 1.8;
    color: var(--c-text);
    padding-bottom: 1rem;
  }

  .article-body p {
    margin-bottom: 0;
  }

  /* Section headings (uses <u> in source HTML) */
  .article-body :global(u) {
    text-decoration: none;
    font-family: var(--f-serif);
    font-style: italic;
    font-size: 1.5rem;
    font-weight: 400;
    color: var(--c-text);
    display: block;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
    padding-bottom: 0.375rem;
    border-bottom: 1px solid var(--c-border);
    transition: border-color var(--t) var(--ease);
  }

  /* Hide the <br><br> immediately after each heading */
  .article-body :global(u + br),
  .article-body :global(u + br + br) {
    display: none;
  }

  .article-body :global(b) {
    font-weight: 700;
  }

  .article-body :global(a) {
    border-bottom: 1px solid var(--c-muted);
    transition:
      color var(--t) var(--ease),
      border-color var(--t) var(--ease);
  }

  .article-body :global(a:hover) {
    color: var(--c-accent);
    border-color: var(--c-accent);
  }

  /* ─── Math / equations ────────────────────────────── */
  /* MathJax 3 container overflow handling */
  .article-body :global(mjx-container) {
    overflow-x: auto;
    overflow-y: hidden;
    max-width: 100%;
  }

  .article-body :global(mjx-container[display="true"]) {
    display: block;
    text-align: center;
    margin: 1.25rem auto;
  }

  /* Legacy wrapper divs in the article markup */
  .article-body :global(div:not(.centered-container):not(.centered-text):not(.equation-scroll):not(.image-container)) {
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
    margin: 1.25rem 0;
  }

  .article-body :global(.centered-container) {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
    margin: 1.25rem 0;
  }

  .article-body :global(.centered-text) {
    text-align: center;
    padding: 0 1rem;
  }

  .article-body :global(.equation-scroll) {
    width: 100%;
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
    margin: 1.25rem 0;
  }

  /* ─── Figures & images ────────────────────────────── */
  .article-body :global(.image-container) {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    justify-content: center;
    align-items: flex-start;
    margin: 2rem 0 1.5rem;
  }

  .article-body :global(.image-container img) {
    width: 48%;
    max-width: 100%;
    height: auto;
    border-radius: 2px;
  }

  .article-body :global(.image-container.single img) {
    width: auto;
    max-width: min(100%, 480px);
    margin: 0 auto;
    display: block;
  }

  .article-body :global(.image-container figcaption) {
    width: 100%;
    font-size: 0.8125rem;
    color: var(--c-muted);
    margin-top: 0;
    font-style: italic;
    line-height: 1.5;
    text-align: center;
  }

  /* ─── Footer ──────────────────────────────────────── */
  .site-footer {
    max-width: 760px;
    margin: 3rem auto 0;
    padding: 2rem clamp(1.25rem, 5vw, 2rem) 3.5rem;
    border-top: 1px solid var(--c-border);
    transition: border-color var(--t) var(--ease);
  }

  .site-footer p {
    font-family: var(--f-sans);
    font-size: 0.6875rem;
    letter-spacing: 0.06em;
    color: var(--c-muted);
  }

  /* ─── Responsive ──────────────────────────────────── */
  @media (max-width: 580px) {
    .article-header {
      padding: 2.5rem 0 1.75rem;
    }

    .article-body :global(.image-container) {
      flex-direction: column;
      align-items: center;
    }

    .article-body :global(.image-container img) {
      width: 100%;
    }

    .article-body :global(.centered-container) {
      display: block;
    }

    .article-body :global(.centered-text) {
      padding: 0;
      width: 100%;
      overflow-x: auto;
    }
  }
</style>

<script>
  const toggle = document.getElementById("theme-toggle");
  const html = document.documentElement;
  const text = toggle?.querySelector<HTMLElement>(".toggle-text");

  function syncToggle(theme: string) {
    if (text) text.textContent = theme === "light" ? "dark" : "light";
  }

  syncToggle(html.getAttribute("data-theme") ?? "light");

  toggle?.addEventListener("click", () => {
    const current = html.getAttribute("data-theme");
    const next = current === "light" ? "dark" : "light";
    html.setAttribute("data-theme", next);
    localStorage.setItem("theme", next);
    syncToggle(next);
  });
</script>
